<div>
    @if (ViewBag.FunsCates != null) {
        <ul class="funs-container">
            @foreach (FunsCate item in ViewBag.FunsCates) {
                foreach (var fun in item.Funs) {
                    <li>
                        <a href="@fun.Url" class="funs-title">@fun.Name</a>
                        <p class="funs-desc">
                            <span class="funs-count">使用次数：@fun.VisitCount</span>
                            <a href="@fun.Url" class="btn btn-default btn-xs funs-button">使用</a>
                        </p>
                    </li>
                }
            }
        </ul>
    }
</div>

@section Script{
    <script>
        $(function () {
            $('.funs-container li').hover(function () {
                $(this).addClass('funs-hover');
                $(this).find('.funs-title').addClass('high-light');
                $(this).find('.funs-button').removeClass('btn-default').addClass('btn-warning');
            }, function () {
                $(this).removeClass('funs-hover');
                $(this).find('.funs-title').removeClass('high-light');
                $(this).find('.funs-button').removeClass('btn-warning').addClass('btn-default');
            });
        });
    </script>
}




