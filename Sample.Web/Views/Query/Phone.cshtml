@{
    ViewBag.Title = "手机归属地查询";
    ViewBag.Keywords = "手机归属地查询";
    ViewBag.Description = "手机归属地查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs">
    <li><a href="/query/local">本机IP</a></li>
    @*<li><a href="/query/http">http模拟查询</a></li>*@
    <li><a href="/query/ip">IP归属地查询</a></li>
    <li><a href="/query/domain">域名归属地查询</a></li>
    <li class="active"><a href="/query/phone">手机归属地查询</a></li>
    <li><a href="/query/today">历史上的今天</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane active">
        <div class="query-parent">
            <div id="app" class="query-container">
                <form class="query-form form-inline">
                    <div class="form-group">
                        <label class="query-tag">手机号码：</label>
                        <input type="text" spellcheck="false" class="form-control query-input" v-model="phone" placeholder="请输入手机号码" />
                    </div>
                    <button v-on:click="getArea" v-bind="status == 1 ? '' : {'disabled':'disabled'}" type="button" class="btn btn-primary">查询</button>
                </form>
                <table class="table table-bordered">
                    <tr>
                        <td class="query-result-tag">号码段：</td>
                        <td>{{scope}}</td>
                    </tr>
                    <tr>
                        <td class="query-result-tag">归属地：</td>
                        <td>{{area}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    @Html.Partial("_ErrorTip")
</div>
@section Script{
    <script src="/assets/js/query/phone.js"></script>
}


