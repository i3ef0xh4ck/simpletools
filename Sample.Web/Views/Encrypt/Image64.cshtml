@{
    ViewBag.Title = "图片转base64,image转base64";
    ViewBag.Keywords = "图片转base64,image转base64";
    ViewBag.Description = "图片转base64,image转base64";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css{
    <style type="text/css">
        .img-preview {            
            background:#fbfbfb;  
            text-align:left;    
        }
        .preview-wrapper {
            width: 100%;
            height: 350px !important;
        }
        .img-info{
            margin-top:10px;
            color:#666;
            display:none;
        }
    </style>
}
<ul class="nav nav-tabs">
    <li><a href="/encrypt/md5">Md5</a></li>
    <li><a href="/encrypt/base64">Base64</a></li>
    <li class="active"><a href="/encrypt/image64">图片转Base64</a></li>
    <li><a href="/encrypt/filemd5">文件Md5</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane active">
        <table class="compare-table">
            <tr>
                <td class="compare-first">
                    <img id="img64Preview" src="" class="img-preview preview-wrapper img-thumbnail" alt="图片预览" />
                </td>
                <td class="compare-second">
                    <p><button id="btnImage64" class="btn btn-primary">选择图片</button></p>
                </td>
                <td class="compare-third">
                    <textarea spellcheck="false" id="txtImage64Result" class="form-control preview-wrapper">base64</textarea>
                </td>
            </tr>
        </table>
        <p class="img-info"></p>
    </div>
    @Html.Partial("_ErrorTip")
</div>
<input type="file" id="image64file" style="visibility:hidden;">

@section Script{
    <script src="/assets/js/encrypt/image64.js"></script>
}
